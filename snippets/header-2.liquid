                    </svg>
                <div>
                    <p class="hotline-text">{{ section.settings.heading_hotline}}</p>
                    <p class="hotline-text" style="display: flex; gap: 0.5rem;">
                        <span>
                            <svg width="6" height="6" viewBox="0 0 6 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="3" cy="3" r="3" fill="#35C35C"/>
                            </svg>
                        </span>
                    {{ section.settings.desc_hotline}}
                    </p>
                </div>
            </div>
            {%- endif -%}
            {% if section.settings.enable_localization %}
                        {% render 'localization' %}
                    {% endif %}
            <div class="header__secondary-links">
                <div>
                    {% if section.settings.enable_login %}
                    <a href="/account/login"
                        class=""
                        style="display:block; height: 20px"
                        aria-label="Login">
                        {% if section.settings.enable_login_icon %}
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.99967 9.99984C12.3009 9.99984 14.1663 8.13436 14.1663 5.83317C14.1663 3.53198 12.3009 1.6665 9.99967 1.6665C7.69849 1.6665 5.83301 3.53198 5.83301 5.83317C5.83301 8.13436 7.69849 9.99984 9.99967 9.99984Z" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M17.1585 18.3333C17.1585 15.1083 13.9501 12.5 10.0001 12.5C6.05013 12.5 2.8418 15.1083 2.8418 18.3333" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>

                        {% endif %}
                    </a>
                    {%- endif -%}
                </div>
                {%- if section.settings.enable_wishlist -%}
                <div class="header-icon icon-wishlist">
                    <a href="/pages/wishlist">
                        {% render 'icon-wishlist-header' %}
                        {% if section.settings.enable_wishlist_icon %}
                            <div class="icon-count">   
                                <div class="title-icon">Wishlist</div>
                                <ap-wishlistcount id="wishlistcount"></ap-wishlistcount> <span>items</span>
                            </div>
                        {%- endif -%}
                        
                    </a>
                </div>
            {%- endif -%}

                <div class="header-icon icon-compare d-none">
                    <a href="/pages/compare">
                        {% render 'icon-compare' %}
                        <div class="icon-count">
                            <div class="title-icon">Compare</div>
                            <ap-comparecount id="comparecount"></ap-comparecount> items
                        </div>
                    </a>
                </div>

                {% comment %} <div class="header__icon-list">

                    
                    {% if section.settings.enable_login %}
                    <a href="/account/login"
                        class="header__icon-wrapper tap-area d-none hd-phone hd-desk"
                        aria-label="Login">
                        {% if section.settings.enable_login_icon %}
                        <svg focusable="false" width="18" height="17"
                            class="icon icon--header-customer   " viewBox="0 0 18 17">
                            <circle cx="9" cy="5" r="4" fill="none" stroke="currentColor"
                                stroke-width="1.2" stroke-linejoin="round"></circle>
                            <path d="M1 17v0a4 4 0 014-4h8a4 4 0 014 4v0" fill="none"
                                stroke="currentColor" stroke-width="1.2"></path>
                        </svg>
                        {% endif %}
                    </a>
                    {%- endif -%} 
                    <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart"
                        ap-expanded-aria="false" class="header__icon-wrapper tap-area hd-desk"
                        aria-label="Cart" data-no-instant="">
                        <svg focusable="false" width="20" height="18"
                            class="icon icon--header-cart   " viewBox="0 0 20 18">
                            <path d="M3 1h14l1 16H2L3 1z" fill="none" stroke="currentColor"
                                stroke-width="1.2"></path>
                            <path d="M7 4v0a3 3 0 003 3v0a3 3 0 003-3v0" fill="none"
                                stroke="currentColor" stroke-width="1.2"></path>
                        </svg>
                        <ap-cartcount
                            class="header__ap-cartcount header__ap-cartcount--floating bubble-count">{{
                            cart.item_count }}</ap-cartcount>
                    </a> 

                </div> {% endcomment %}
                
                <ul class="header__linklist list--unstyled hd-pocket hd-lap" role="list">
                    <li class="header__linklist-item">
                        {%- if section.settings.enable_cart -%}
                        <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart"
                            ap-expanded-aria="false" data-no-instant="">
                            <span class="icon-cart_header">
                                <svg width="22" height="20" viewBox="0 0 22 20" fill="none" xmlns="http://www.w3.org/2000/svg">
